<style type="text/css">
	.post-panel
	{
		margin-top: -21px;
	}
	.post-content{
		text-align: left;
		margin-left: 15px;
		
	}
	.post-links{
		text-align: left;
	}
	.post-title{
		text-align: left;
		margin-left: 15px;
	}
	.post-owner{
		color: black;
		font-weight: bold;
	}
	.post-creation{
		opacity: 0.75;
	}
	.g-links{
		opacity: 0.5;
		font-size: 120%;
		margin-right: 45px;
	}
	.rounded-image{
		border-radius: 30%;

	}
	.opacity
	{
		margin-left: 20px;
	}
	.panel-image img.panel-image-preview {
    width: 100%;
    border-radius: 4px 4px 0px 0px;
	}
	.panel-heading ~ .panel-image img.panel-image-preview {
	    border-radius: 0px;
	}
	.panel-image ~ .panel-body, .panel-image.hide-panel-body ~ .panel-body {
	    overflow: hidden;
	}
	.panel-image ~ .panel-footer a {
		
	    padding: 0px 10px;
	    font-size: 1.3em;
	    color: rgb(100, 100, 100);
	}
	.panel-image.hide-panel-body ~ .panel-body {
	    height: 0px;
	    padding: 0px;
	}

	.profile-banner {
	    width: 100%;
	    height: 500px;
	    margin-top: -21px;
	}
	.panel-footer
	{
		background-color: white;
	}
	.home-avatar{
		margin-bottom: 20px;
	}




</style>
<div class="row">
	<div class="col-xs-3">
		<div class="panel panel-default">
  		
				<div class="panel-image hide-panel-body">
					<img src="/1.jpg" class="panel-image-preview">
				</div>	
					<div class="panel-footer text-center">
						<div class="row">
							<div class="col-sm-2"><img src="/logo.jpg" height="50px" width="50px" class="rounded-image home-avatar"></div>
							 <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
				                <div class="col-sm-12" style="margin-top: 10px;">
				                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
				                    <h6 style="color: #0084B4; font-size: 250%;opacity: 0.7;">16</h6>
				                  </div>
				                  <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
				                    <h6 style="color: #0084B4; font-size: 250%; opacity: 0.7;">15</h6>
				                  </div>
				                </div>
						</div>
					</div>
					
				</div>

		<div class="panel panel-default">
  			<div class="panel-body">
  			<h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
			</div>
		</div>
	</div>

	<div class="col-xs-6">
		<%= render '/components/form_post' %><br><br>

		<% for @p in @posts %>
		<div class="panel panel-default post-panel">
  			<div class="panel-body row">
  				<div class="col-sm-1">
  					<img src="/logo.jpg" class="rounded-image" height="50px" width="50px">
  				</div>
  				<div class="col-sm-11">
  					<p class="post-title"><span class="post-owner"><%=User.find(@p.user_id).username %></span><span class="post-creation"> - <%=@p.created_at.to_formatted_s(:short) %></span></p>
  					<p class="post-content panel-body"><%= @p.content %></p>
  				</div>
  				<div class="col-sm-12">
  					<p class="post-links">
  						<span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
  						<span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
  						<span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
						<span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
						<a href="/">View conversation</a>
  					</p>
  				</div>

				
			</div>
		</div>
		<% end %>
			<div class="panel panel-default post-panel">
  			<div class="panel-body row">
  				<div class="col-sm-12">
					<center>
						<img src="/tw.png", width="25px;",height="25px;"></img>
						<a href="#top"><p class="opacity: .7; color:grey;">Back to Top<span class="glyphicon glyphicon-arrow-up g-links" aria-hidden="true"></span></p></a>
					</center>
  				</div>
			</div>
		</div>
	</div>

	<div class="col-xs-3">
		<div class="panel panel-default">
  			<div class="panel-body">
				<p style="opacity: 0.5; font-size: 90%">@ 2016 LookiN About  Help  Blog  Status  Jobs  Terms  Privacy  Police  Adds  Info  Brand  Advertise  Bussiness  Media  Developers </p>
			</div>
		</div>
	</div>
</div>






















